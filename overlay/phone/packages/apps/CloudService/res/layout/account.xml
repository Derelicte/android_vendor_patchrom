<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:fillViewport="true"
         android:fadingEdge="none">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/banner" />
                 <LinearLayout
                     android:orientation="vertical"
                     android:gravity="center_horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dip"
                     android:layout_marginRight="10dip">
                     <TextView
                         android:text="@string/account_banner"
                         android:gravity="center_vertical|left"
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:textColor="@miui:color/android_listseparator_text_holo_light"
                         android:background="@miui:drawable/android_list_section_divider_holo_light"
                         android:paddingLeft="10dip"
                         android:layout_marginTop="5dip"
                         android:layout_marginBottom="10dip"/>
                     <TextView
                         android:text="@string/account"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginLeft="10dip"
                         android:layout_marginRight="10dip"
                         android:layout_gravity="left"/>
                     <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:id="@+id/login_username_edit_text"
                         android:hint="@string/account_hint_text"
                         android:textAppearance="@android:style/TextAppearance.Small"
                         android:layout_marginLeft="10dip"
                         android:layout_marginRight="10dip"
                         android:inputType="textEmailAddress" />
                     <TextView
                         android:text="@string/password"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_gravity="left"
                         android:layout_marginLeft="10dip"
                         android:layout_marginRight="10dip"
                         android:layout_marginTop="10dip" />
                     <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:id="@+id/login_password_edit_text"
                         android:hint="@string/password_hint"
                         android:layout_marginLeft="10dip"
                         android:layout_marginRight="10dip"
                         android:textAppearance="@android:style/TextAppearance.Small"
                         android:inputType="textPassword" />
                     <FrameLayout
                         android:id="@+id/login"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center_vertical"
                         android:layout_gravity="center_horizontal"
                         android:orientation="horizontal"
                         android:layout_marginBottom="10dip"
                         android:layout_marginTop="32dip">
                         <Button
                             android:id="@+id/login_button"
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_horizontal"
                             android:text="@string/login_xiaomi_account"
                             android:textColor="@android:color/white"
                             android:background="@drawable/login"/>
                         <ProgressBar
                             android:id="@+id/login_progressbar"
                             android:layout_marginLeft="10dip"
                             android:layout_height="wrap_content"
                             android:layout_width="20dip"
                             android:visibility="gone" />
                     </FrameLayout>
                     <TextView
                         android:id="@+id/forget_password"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_horizontal"
                         android:paddingRight="10dip"
                         android:textColor="@color/html_link"
                         android:text="@string/forget_password" />
              </LinearLayout>
              <View
                  android:layout_width="wrap_content"
                  android:layout_height="0dip"
                  android:layout_weight="1"/>
              <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:background="@miui:drawable/android_ab_bottom_solid_inverse_holo">
                  <Button
                      android:id="@+id/create_button"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:background="@drawable/create_account"
                      android:text="@string/new_account"/>
             </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
