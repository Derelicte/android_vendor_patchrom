<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/miui_home_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@drawable/miui_home_bg">

    <com.android.browser.view.MiuiHomeTabBar
        android:id="@+id/miui_home_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/miui_home_tab_bar_bg"
    />
    <android.support.v4.view.ViewPager
        android:id="@+id/miui_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</LinearLayout>


