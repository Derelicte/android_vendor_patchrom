<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/guide_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
    />
    <TextView
        android:id="@+id/guide_txt"
        style="@android:style/TextAppearance.Medium"
        android:gravity="left|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="13dip"
        android:drawablePadding="10dip"
    />
    <LinearLayout
        android:id="@+id/logout_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/login_button"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/account_login"
        />
        <TextView
            style="@android:style/TextAppearance.Small"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dip"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/miliao_account_guide"
         />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@android:style/TextAppearance.Medium"
                android:id="@+id/restore_type"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />
            <TextView
                style="@android:style/TextAppearance.Small"
                android:id="@+id/last_backup_info"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_hint"
            />
        </LinearLayout>
        <TextView
            style="@android:style/TextAppearance.Small"
            android:id="@+id/cloud_restore_guide"
            android:layout_marginTop="10dip"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        android:visibility="gone">
        <TextView
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:text="@string/import_from_xiaomi_account_hint1" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/import_xiaomi_account_logo" />
        <TextView
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dip"
            android:text="@string/import_from_xiaomi_account_hint2" />
    </LinearLayout>
</LinearLayout>
