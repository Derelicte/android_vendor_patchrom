<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/task_result"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/task_result_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/task_result_title"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/task_result_summary"
            android:textColor="@color/half_transparent_white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
       <View
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1" />
        <Button android:id="@+id/button_finish"
            android:text="@string/button_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical|bottom"/>
     </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
