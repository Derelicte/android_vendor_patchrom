<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miui="http://schemas.android.com/apk/res/miui"
    xmlns:prvandroid="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.android.internal.widget.multiwaveview.MiuiInCallAnswerWidgetHorizontal
        android:id="@+id/inCallAnswerWidgetHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/in_call_answer_widget_bg_miui"
        android:visibility="gone"

        prvandroid:targetDrawables="@array/in_call_answer_widget_3way_targets_miui"
        miui:targetDrawablesLight="@array/in_call_answer_widget_3way_targets_light_miui"
        prvandroid:targetDescriptions="@array/in_call_answer_widget_3way_target_descriptions_miui"
        prvandroid:directionDescriptions="@array/in_call_answer_widget_3way_direction_descriptions_miui"
        prvandroid:handleDrawable="@drawable/ic_in_call_touch_handle_miui"
        prvandroid:waveDrawable="@drawable/ic_in_call_outering_miui"
        prvandroid:outerRadius="@dimen/multiwaveview_target_placement_radius_miui"
        prvandroid:snapMargin="@dimen/multiwaveview_snap_margin_miui"
        prvandroid:hitRadius="@dimen/multiwaveview_hit_radius_miui"
        miui:rightHintAnimationDrawable="@drawable/ic_in_call_right_hint_anim_miui"
        prvandroid:vibrationDuration="20"
        prvandroid:feedbackCount="3"
        prvandroid:horizontalOffset="0dip"
        prvandroid:verticalOffset="50dip"/>
</RelativeLayout>
