<!-- The grid of buttons used in the onscreen DTMF dialpad;
     see dtmf_twelve_key_dialer_view.xml. -->

<com.android.phone.DTMFTwelveKeyDialerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dtmf_twelve_key_dialer_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/incall_dialer_panel_bg_miui"
    android:visibility="gone">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/dtmfDialerField"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:visibility="gone" />
        <!-- The dialpad itself -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <LinearLayout style="@style/Miui.TableRow">
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/one" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_one" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/two" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_two" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/three" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_three" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/Miui.TableRow">
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/four" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_four" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/five" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_five" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/six" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_six" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/Miui.TableRow">
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/seven" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_seven" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/eight" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_eight" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/nine" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_nine" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/Miui.TableRow">
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/star" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_star" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/zero" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_zero" />
                </LinearLayout>
                <LinearLayout style="@style/Miui.TableColumn">
                    <Button android:id="@+id/pound" style="@style/Miui.DialpadButtonStyle"
                        android:contentDescription="@string/description_image_button_pound" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:src="@drawable/incall_dialer_panel_buttons_miui"
            android:scaleType="fitXY" />
    </FrameLayout>
</com.android.phone.DTMFTwelveKeyDialerView>

