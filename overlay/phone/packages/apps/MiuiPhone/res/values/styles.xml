    -->

    <style name="Miui.Theme.Settings.Alternative" parent="@android:style/Theme.NoDisplay">
    </style>

    <style name="Miui.Theme.InCallScreen.Alternative" parent="@android:style/Theme.NoDisplay">
    </style>

    <style name="Miui.Theme.SimContacts.Alternative" parent="@android:style/Theme.NoDisplay">
    </style>

    <!-- Styles for theme -->
    <style name="Miui.Theme.Settings" parent="@miui:style/Theme.Light">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="Miui.Theme.Settings.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="Miui.Theme.Settings.NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="Miui.Theme.AlertActivity" parent="@miui:style/Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowNoDisplay">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Miui.DialpadButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/incall_dialpad_panel_button_bg_miui</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="Miui.TextAppearance" parent="@android:style/TextAppearance"/>

    <style name="Miui.TextAppearance.DialogTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="Miui.TextAppearance.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Miui.TextAppearance.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Miui.TextAppearance.Name">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/call_card_name_miui</item>
        <item name="android:shadowColor">@color/call_card_name_shadow_miui</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="Miui.TextAppearance.Name.Secondary" parent="Miui.TextAppearance.Name">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Miui.TextAppearance.Info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/call_card_info_miui</item>
        <item name="android:shadowColor">@color/call_card_info_shadow_miui</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Miui.TextAppearance.PhoneNumber" parent="Miui.TextAppearance.Info">
    </style>

    <style name="Miui.TextAppearance.Telocation" parent="Miui.TextAppearance.Info">
    </style>

    <style name="Miui.TextAppearance.ExtraInfo" parent="Miui.TextAppearance.Info">
    </style>

    <style name="Miui.TextAppearance.ElapsedTime" parent="Miui.TextAppearance.Info">
    </style>

    <style name="Miui.TextAppearance.SlidingTarget">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sliding_target_miui</item>
    </style>

    <style name="Miui.TextAppearance.SlidingBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/sliding_bar_miui</item>
        <item name="android:shadowColor">@color/sliding_bar_shadow_miui</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Miui.TextAppearance.SlidingBar.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Miui.TextAppearance.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/normal_button_miui</item>
        <item name="android:shadowColor">@color/normal_button_shadow_miui</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Miui.TextAppearance.RedButton" parent="Miui.TextAppearance.Button">
        <item name="android:textColor">@color/red_button_miui</item>
        <item name="android:shadowColor">@color/red_button_shadow_miui</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="Miui.TextAppearance.InCallControlButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/incall_control_button_miui</item>
        <item name="android:shadowColor">@color/incall_control_button_shadow_miui</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Miui.TextAppearance.InCallControlButton.Disabled" parent="Miui.TextAppearance.InCallControlButton">
        <item name="android:textColor">@color/incall_control_button_disable_miui</item>
    </style>

    <style name="Miui.TextAppearance.InCallControlButton.Checked" parent="Miui.TextAppearance.InCallControlButton">
        <item name="android:textColor">@color/incall_control_button_checked_miui</item>
    </style>

    <style name="Miui.TextAppearance.RightRadioButton">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">60dip</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Miui.List">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:childDivider">@null</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@null</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="Miui.ToolButtonStyle" parent="Miui.TextAppearance.InCallControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/incall_tool_panel_button_bg_miui</item>
    </style>

    <style name="Miui.TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Miui.TableColumn">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
