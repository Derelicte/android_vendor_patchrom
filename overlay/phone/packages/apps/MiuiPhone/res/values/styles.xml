<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Miui" />

    <!--
    <style name="Miui.Theme.Settings.Alternative" parent="@android:style/Theme.Holo.DialogWhenLarge">
    </style>

    <style name="Miui.Theme.InCallScreen.Alternative" parent="@style/Theme.InCallScreen">
    </style>

    <style name="Miui.Theme.SimContacts.Alternative" parent="@style/SimImportTheme">
