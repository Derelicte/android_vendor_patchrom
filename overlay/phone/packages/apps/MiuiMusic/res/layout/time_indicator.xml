<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
>
    <view
        class="com.miui.player.ui.view.NinePatchSeekBar"
        android:id="@android:id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/time_indicator_thumb_selector"
        android:progressDrawable="@drawable/time_indicator_progress_drawable"
        android:thumbOffset="8.67dip"
        android:layout_marginLeft="-2dip"
        android:layout_marginRight="-2dip"
        android:gravity="center_vertical"
      />

    <TextView android:id="@+id/currenttime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/IndicatorTextStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@android:id/progress"
        android:layout_marginLeft="@dimen/spacing_to_border"
        android:gravity="left"/>

    <TextView android:id="@+id/totaltime"
        style="@style/IndicatorTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@android:id/progress"
        android:layout_marginRight="@dimen/spacing_to_border"
        android:gravity="right"/>

</merge>
