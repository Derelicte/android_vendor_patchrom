<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content">
    <LinearLayout
        android:id="@+id/category_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/category_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/preview_list_title_text"
            android:textColor="@color/preview_list_title_text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/preview_wrap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/category_row"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <include
            android:id="@+id/song_item_preview_1"
            layout="@layout/online_song_item_preview" />

        <include
            android:id="@+id/song_item_preview_2"
            layout="@layout/online_song_item_preview" />

        <include
            android:id="@+id/song_item_preview_3"
            layout="@layout/online_song_item_preview" />

        <include
            android:id="@+id/song_item_preview_4"
            layout="@layout/online_song_item_preview" />
    </LinearLayout>

</RelativeLayout>