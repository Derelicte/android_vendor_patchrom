<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainItemStyle"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/main_item_horizontal_space"
    android:paddingRight="@dimen/main_item_horizontal_space"
    android:orientation="horizontal">

    <TextView android:id="@+id/item_name"
        style="@style/ItemPrimaryText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <TextView android:id="@+id/item_num"
        style="@style/ItemSecondaryText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="right|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/main_item_arrow"
        android:drawablePadding="12.67dip"/>
</RelativeLayout>