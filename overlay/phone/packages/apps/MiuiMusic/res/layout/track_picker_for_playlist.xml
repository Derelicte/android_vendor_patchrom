<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MusicActivityStyle"
    android:id="@+id/music_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <ListView
            android:id="@android:id/list"
            style="@style/PickerListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.miui.player.ui.view.AlphabetFastIndexer
            android:id="@+id/fast_indexer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/picker_bottom_commit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/operation_bar_bg"  >

        <include layout="@layout/commit_bar_2" />
    </LinearLayout>

</LinearLayout>