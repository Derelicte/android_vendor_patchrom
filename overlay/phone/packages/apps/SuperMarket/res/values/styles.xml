<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Global Theme Styles -->
    <eat-comment />

    <style name="UserTab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="UserTab.Upper">
        <item name="android:background">@drawable/upper_user_tab</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/upper_user_tab_color</item>
    </style>
    
    <style name="UserTab.Lower">
        <item name="android:background">@drawable/lower_user_tab</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="CareBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="CareBtn.Cancel">
        <item name="android:background">@miui:drawable/android_btn_default_normal</item>
    </style>

    <style name="CareBtn.Add">
        <item name="android:background">@miui:drawable/android_btn_default_pressed</item>
    </style>

    <style name="PopDownText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">39dip</item>
        <item name="android:paddingRight">39dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
