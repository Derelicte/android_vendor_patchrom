<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_empty_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <include
        android:id="@+id/friend_middle_downloading_view"
        layout="@layout/downloading_view" />
    <TextView
        android:id="@+id/friend_empty_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_friend_recommendations"
        android:gravity="center"/>
    <Button
        android:id="@+id/login_btn"
        android:text="@string/login_to_miui"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:visibility="gone"
        android:gravity="center"/>
</LinearLayout>
