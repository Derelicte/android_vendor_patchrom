<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_upper_part"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dip"
    android:paddingLeft="3dip"
    android:paddingRight="3dip"
    android:background="@drawable/user_info_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_info_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:paddingLeft="5dip"
        android:visibility="gone"
        android:orientation="horizontal">
        <include
            layout="@layout/user_icon_name_desc_refresh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:orientation="horizontal">
        <include
            android:id="@+id/local_layout"
            layout="@layout/one_user_tab"/>
        <include
            android:id="@+id/comment_layout"
            android:visibility="gone"
            android:layout_marginLeft="5dip"
            layout="@layout/one_user_tab"/>
        <include
            android:id="@+id/care_layout"
            android:visibility="gone"
            android:layout_marginLeft="5dip"
            layout="@layout/one_user_tab"/>
        <include
            android:id="@+id/fan_layout"
            android:visibility="gone"
            android:layout_marginLeft="5dip"
            layout="@layout/one_user_tab"/>
        <include
            android:id="@+id/login_layout"
            android:layout_marginLeft="5dip"
            android:visibility="gone"
            layout="@layout/self_login_tab"/>
    </LinearLayout>

</LinearLayout>
