<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/bg_friend_list_item"
>
    <ImageView
        android:id="@+id/listitem_friend_o_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_gravity="center"
        android:background="#00000000"
        android:src="@drawable/i_phone"
    />
    <TextView
        android:id="@+id/listitem_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dip"
        android:textSize="18sp"
        android:textColor="#FF000000"
        android:maxWidth="120dip"
        android:singleLine="true"
    />
    <TextView
        android:id="@+id/listitem_friend_phone"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="13sp"
        android:textColor="#FF666666"
    />
    <ImageView
        android:id="@+id/listitem_friend_o_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_gravity="center"
        android:background="#00000000"
        android:src="@drawable/i_sms"
    />
</LinearLayout>