<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="508dip"
    android:orientation="vertical"
    android:background="@drawable/app_main_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/line_bg_73_bottom"
    >
        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:gravity="left|center_vertical"
            android:textSize="24sp"
            android:textColor="#FFFFFFFF"
            android:text="@string/act_set_city_title"
            android:singleLine="true"
            android:cursorVisible="false"
        />
        <ImageButton
            android:id="@+id/act_set_city_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/i_add"
            android:background="#00000000"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
    >
        <ListView
            android:id="@+id/act_set_city_define"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:listSelector="@android:color/transparent"
            android:fadingEdgeLength="0dip"
            android:scrollbars="none"
        />
    </LinearLayout>
</LinearLayout>
