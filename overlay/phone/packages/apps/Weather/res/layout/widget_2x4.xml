<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="200dip"
    android:clickable="true"
    android:focusable="true"
>
    <ImageView
        android:id="@+id/widget_2x4_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/a3_00"
    />

    <ImageView
        android:id="@+id/widget_2x4_time_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dip"
        android:layout_marginTop="33dip"
        android:layout_gravity="left|top"
    />
    <ImageView
        android:id="@+id/widget_2x4_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="94dip"
        android:layout_marginTop="33dip"
        android:layout_gravity="left|top"
    />
    <ImageView
        android:id="@+id/widget_2x4_time_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dip"
        android:layout_marginTop="33dip"
        android:layout_gravity="left|top"
    />
    <ImageView
        android:id="@+id/widget_2x4_time_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="209dip"
        android:layout_marginTop="33dip"
        android:layout_gravity="left|top"
    />

    <TextView
        android:id="@+id/widget_2x4_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="130dip"
        android:layout_gravity="left|top"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"
    />
    <TextView
        android:id="@+id/widget_2x4_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dip"
        android:layout_marginTop="153dip"
        android:layout_gravity="left|top"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
    />
    <TextView
        android:id="@+id/widget_2x4_env"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dip"
        android:layout_marginTop="130dip"
        android:layout_gravity="right|top"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"
    />
    <TextView
        android:id="@+id/widget_2x4_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:layout_marginTop="153dip"
        android:layout_gravity="right|top"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
        android:text="@string/widget_loading"
    />

    <ImageView
        android:id="@+id/widget_2x4_up_1"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
    />
    <ImageView
        android:id="@+id/widget_2x4_up_2"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="150dip"
    />
    <ImageView
        android:id="@+id/widget_2x4_down_1"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="0dip"
    />
    <ImageView
        android:id="@+id/widget_2x4_down_2"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="100dip"
    />
    <ImageView
        android:id="@+id/widget_2x4_down_3"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="200dip"
    />
</FrameLayout>
