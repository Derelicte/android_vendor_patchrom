<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/window_delete_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#663F3F3F"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="240dip"
        android:layout_height="200dip"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
    >
        <TextView
            android:id="@+id/window_delete_title"
            android:layout_width="wrap_content"
            android:layout_height="47dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#FF000000"
            android:singleLine="true"
            android:text="@string/act_set_city_delete_title"
        />
        <TextView
            android:id="@+id/window_delete_content"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textColor="#FF000000"
        />
        <LinearLayout
            android:id="@+id/window_delete_layout_bar"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:gravity="center"
        >
            <Button
                android:id="@+id/window_delete_layout_bar_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="4dip"
                android:background="@drawable/popup_item"
                android:text="@string/app_ok"
                android:textSize="16sp"
                android:textColor="#FF424242"
            />
            <Button
                android:id="@+id/window_delete_layout_bar_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dip"
                android:background="@drawable/popup_item"
                android:text="@string/app_exit"
                android:textSize="16sp"
                android:textColor="#FF424242"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>