<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="100dip"
    android:clickable="true"
    android:focusable="true"
>
    <ImageView
        android:id="@+id/widget_1x4_bg"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/a4_00"
    />
    <TextView
        android:id="@+id/widget_1x4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="23dip"
        android:layout_gravity="left|top"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
    />
    <TextView
        android:id="@+id/widget_1x4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="47dip"
        android:layout_gravity="left|top"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"
    />
    <TextView
        android:id="@+id/widget_1x4_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dip"
        android:layout_marginTop="23dip"
        android:layout_gravity="right|top"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
    />
    <TextView
        android:id="@+id/widget_1x4_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dip"
        android:layout_marginTop="47dip"
        android:layout_gravity="right|top"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"
        android:text="@string/widget_loading"
    />

    <ImageView
        android:id="@+id/widget_1x4_left_1"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
    />
    <ImageView
        android:id="@+id/widget_1x4_left_2"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="100dip"
    />
    <ImageView
        android:id="@+id/widget_1x4_left_3"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="200dip"
    />
</FrameLayout>
