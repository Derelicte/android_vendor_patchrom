<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF000000"
>
    <FrameLayout
        android:id="@+id/act_weather_cycle_layout_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:paddingBottom="57dip"
    >
        <com.miui.weather2.view.ViewWeatherBg
            android:id="@+id/act_weather_cycle_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        />
        <com.miui.weather2.view.ViewGallery
            android:id="@+id/act_weather_cycle_gallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        />
        <com.miui.weather2.view.ViewWeatherFg
            android:id="@+id/act_weather_cycle_fg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
        >
            <ImageView
                android:id="@+id/act_weather_cycle_gps_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:src="@drawable/i_gps"
            />
            <TextView
                android:id="@+id/act_weather_cycle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="10dip"
                android:layout_gravity="top|left"
                android:textSize="24sp"
                android:textColor="#FFFFFFFF"
                android:singleLine="true"
                android:cursorVisible="false"
            />
            <com.miui.weather2.view.ViewPageBar
                android:id="@+id/act_weather_cycle_page_bar"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
            />
            <ImageButton
                android:id="@+id/act_weather_cycle_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="7dip"
                android:background="#00000000"
                android:src="@drawable/i_edit"
            />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_weather_main_layout_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:paddingBottom="57dip"
    >
        <com.miui.weather2.view.ViewWeatherBg
            android:id="@+id/act_weather_main_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
        >
            <TextView
                android:id="@+id/act_weather_main_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:layout_gravity="top|left"
                android:textSize="24sp"
                android:textColor="#FFFFFFFF"
                android:singleLine="true"
                android:cursorVisible="false"
            />
            <ImageButton
                android:id="@+id/act_weather_main_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="7dip"
                android:background="#00000000"
                android:src="@drawable/i_edit"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="48dip"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/act_weather_main_header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="#FFFFFFFF"
            />
            <TextView
                android:id="@+id/act_weather_main_header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-5dip"
                android:textSize="32sp"
                android:textColor="#FFFFFFFF"
            />
            <TextView
                android:id="@+id/act_weather_main_header_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-6dip"
                android:textSize="14sp"
                android:textColor="#FFFFFFFF"
            />
            <TextView
                android:id="@+id/act_weather_main_header_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dip"
                android:textSize="14sp"
                android:textColor="#FFFFFFFF"
            />
            <ListView
                android:id="@+id/act_weather_main_other"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:padding="10dip"
                android:layout_gravity="top|center_horizontal"
                android:listSelector="@android:color/transparent"
                android:fadingEdgeLength="0dip"
                android:scrollbars="none"
            />
            <LinearLayout
                android:id="@+id/act_weather_main_other_empty"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dip"
                android:gravity="center"
                android:background="@drawable/app_main_data_null_bg"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:textColor="#FFFFFFFF"
                    android:text="@string/act_weather_main_data_null"
                />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_weather_friend_layout_main"
        android:layout_width="fill_parent"
        android:layout_height="470dip"
        android:layout_gravity="top"
    >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_gravity="top"
            android:background="@drawable/app_main_bottombar"
        >
            <LinearLayout
                android:id="@+id/act_weather_cycle_layout_operate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dip"
            >
                <ImageView
                    android:id="@+id/act_weather_cycle_position"
                    android:layout_width="58dip"
                    android:layout_height="58dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/i_position"
                />
                <TextView
                    android:id="@+id/act_weather_cycle_time"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="15dip"
                    android:textColor="#FFCCCCCC"
                />
                <ImageView
                    android:id="@+id/act_weather_cycle_refresh"
                    android:layout_width="58dip"
                    android:layout_height="58dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/i_fresh"
                />
                <ProgressBar
                    android:id="@+id/act_weather_parent_pbar_load"
                    android:layout_width="58dip"
                    android:layout_height="58dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    style="@style/circle_progressbar"
                />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/act_weather_cycle_bar_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="9dip"
            android:background="#00000000"
            android:src="@drawable/i_bottom_arrow_up"
        />
        <!-- set clickable as true: not allow to swipe widgets like text view to navigate in Gallery -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:layout_marginTop="60dip"
            android:background="#FFC7D3E1"
            android:orientation="vertical"
            android:clickable="true"
        >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/bg_item_single_normal"
            >
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="#FF000000"
                        android:textSize="18sp"
                        android:text="@string/app_weather_friend_1"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="#FFb2b2b2"
                        android:textSize="13sp"
                        android:text="@string/app_weather_friend_2"
                    />
                </LinearLayout>
                <ImageView
                    android:id="@+id/act_weather_friend_switch"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/bg_item_single_normal"
            >
                <TextView
                    android:id="@+id/act_weather_friend_fase_sms"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="70dip"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:text="@string/app_weather_friend_2"
                />
                <ImageView
                    android:id="@+id/act_weather_friend_fase_sms_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dip"
                    android:background="#00000000"
                    android:src="@drawable/i_sms"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="5dip"
                android:orientation="vertical"
            >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dip"
                    android:textSize="16sp"
                    android:textColor="#FF65778b"
                    android:text="@string/app_weather_friend_title_1"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:orientation="vertical"
            >
                <ListView
                    android:id="@+id/act_weather_friend_list"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dip"
                    android:listSelector="@android:color/transparent"
                    android:fadingEdgeLength="0dip"
                    android:scrollbars="none"
                />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/act_weather_friend_wicon"
            android:layout_width="75dip"
            android:layout_height="63dip"
            android:layout_gravity="top|left"
            android:layout_marginTop="130dip"
            android:layout_marginLeft="5dip"
            android:background="#00000000"
            android:src="@drawable/i_delete"
        />
    </FrameLayout>
</FrameLayout>