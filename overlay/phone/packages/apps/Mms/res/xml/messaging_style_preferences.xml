<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>
        <com.android.mms.ui.MessagingStylePreference
            android:key="pref_key_messaging_style"
            android:persistent="false" />
    </PreferenceCategory>

    <miui.preference.RadioButtonPreferenceCategory
        android:key="pref_key_time_style">
        <miui.preference.RadioButtonPreference
            android:key="pref_key_time_style_auto_group"
            android:title="@string/pref_time_auto_group_title"
            android:summary="@string/pref_time_auto_group_summary"
            android:defaultValue="true" />
        <miui.preference.RadioButtonPreference
            android:key="pref_key_time_style_all"
            android:title="@string/pref_time_all_title"
            android:summary="@string/pref_time_all_summary"
            android:defaultValue="false" />
    </miui.preference.RadioButtonPreferenceCategory>
</PreferenceScreen>
