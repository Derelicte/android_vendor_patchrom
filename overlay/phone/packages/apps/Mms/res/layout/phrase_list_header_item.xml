<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/ListItem.Narrow">
    <LinearLayout
        android:id="@+id/new_phrase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/ListItemContent">
        <TextView
            android:id="@+id/phrase_body"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="@string/new_phrase"
            android:textAppearance="@style/TextAppearance.MessageBody.List" />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/new_phrase" />
    </LinearLayout>
    <TextView
        android:id="@+id/full_phrase"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="@string/full_phrase"
        android:textAppearance="@style/TextAppearance.MessageBody.List"
        android:visibility="gone"
        style="@style/ListItemContent" />
</LinearLayout>
