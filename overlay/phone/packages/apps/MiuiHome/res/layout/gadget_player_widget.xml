<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="380.67dip"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="2dip"
    android:layout_marginTop="-6.67dip"
    android:layout_gravity="center"
>
    <RelativeLayout
        android:id="@+id/cachable_wrap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dip"
        android:background="@drawable/gadget_player_center_bg"
    >
        <FrameLayout
            android:id="@+id/album_wrap"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="top|left"
        >
            <ImageView android:id="@+id/album_image"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_gravity="top|left"
                android:scaleType="fitXY"
            />

        </FrameLayout>
        <View
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/gadget_player_center_mask"
        />
        <LinearLayout android:id="@+id/player_control"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dip"
            android:gravity="center"
        >
            <ImageView
                android:id="@+id/control_prev"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@drawable/prev_button_gadget_player"
                android:scaleType="center"
            />
            <ImageView
                android:id="@+id/control_play"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@drawable/play_button_gadget_player"
                android:scaleType="center"
            />
            <ImageView
                android:id="@+id/control_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/next_button_gadget_player"
                android:scaleType="center"
            />
        </LinearLayout>
        <ImageView  android:id="@+id/favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="9.33dip"
            android:layout_marginTop="4.67dip"
            android:gravity="center"
            android:scaleType="center"
        />
        <ImageView
            android:id="@+id/nowplaying_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9.33dip"
            android:layout_marginTop="4.67dip"
            android:src="@drawable/ic_tab_nowplaying_gadget_player"
            android:gravity="center"
            android:scaleType="center"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:orientation="vertical"
        >
        <TextView style="@style/MarqueeTextView"
            android:id="@+id/track_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:textColor="@color/gadget_player_track_text"
            android:textSize="14dip"
            android:gravity="center"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:maxWidth="260dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
        />

        <LinearLayout
            android:id="@+id/time_indicator_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:gravity="center"
         >
            <TextView android:id="@+id/current_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minWidth="28dip"
                android:textColor="@color/gadget_player_time_text"
                android:textSize="11dip"
                android:layout_gravity="left|center_vertical"
                android:gravity="left"
                android:shadowRadius="1.5"
                android:shadowDx="1"
                android:shadowDy="1"
            />
            <FrameLayout
                android:id="@+id/progress_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="bottom|center_vertical"
                android:background="@drawable/progress_bg_drawable_gadget_player"
            >
                <ImageView
                    android:id="@+id/progress_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_loading_drawable_gadget_player"
                    android:scaleType="fitXY"
                 />
                <ImageView
                    android:id="@+id/progress_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_current_drawable_gadget_player"
                    android:scaleType="fitXY"
                />
            </FrameLayout>

            <TextView android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="28dip"
                android:textColor="@color/gadget_player_time_text"
                android:textSize="11dip"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:shadowRadius="1.5"
                android:shadowDx="1"
                android:shadowDy="1"
            />
        </LinearLayout>
    </LinearLayout>

    <ScrollView  android:id="@+id/lyric_wrap"
        android:layout_gravity="top"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:fadingEdge="vertical"
        android:gravity="bottom"
        android:scrollbars="none"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="140dip"
        android:layout_marginTop="73dip"
        android:layout_alignParentTop="true"
    >
        <LinearLayout android:id="@+id/lyric"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/lyric_before"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:includeFontPadding="false"
                android:gravity="center_horizontal|bottom"
                android:textSize="14dip"
                android:textColor="@color/gadget_player_lyric_text"
            />
            <TextView
                style="@style/GadgetPlayerLyricCurrentLineShadowStyle"
                android:id="@+id/lyric_current"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textColor="@color/gadget_player_lyric_current_text"
                android:layout_marginTop="-4dip"
                android:gravity="center"
                android:textSize="14dip"
            />
            <TextView
                android:id="@+id/lyric_after"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:includeFontPadding="false"
                android:gravity="center_horizontal|top"
                android:textSize="14dip"
                android:textColor="@color/gadget_player_lyric_text"
            />
        </LinearLayout>
    </ScrollView>

    <miui.widget.SpectrumVisualizer
        android:id="@+id/spectrum_visualizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        xmlns:miui="http://schemas.android.com/apk/res/miui"
        miui:symmetry="true"
     />
</RelativeLayout>
