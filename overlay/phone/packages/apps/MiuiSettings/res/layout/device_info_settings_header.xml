<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:shrinkColumns="1"
        android:stretchColumns="1"
        android:gravity="center"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >
        <TableRow>
            <TextView
                style="@style/Miui.InformationItemTitleStyle"
                android:text="@string/model_number"
            />
            <TextView android:id="@+id/model_number"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:paddingTop = "3dip">
            <TextView
                style="@style/Miui.InformationItemTitleStyle"
                android:text="@string/firmware_version"
            />
            <TextView android:id="@+id/firmware_version"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:paddingTop = "3dip">
            <TextView
                style="@style/Miui.InformationItemTitleStyle"
                android:text="@string/device_cpu"
            />
            <TextView android:id="@+id/device_cpu"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:paddingTop = "3dip">
            <TextView
                style="@style/Miui.InformationItemTitleStyle"
                android:text="@string/device_memory"
            />
            <TextView android:id="@+id/device_memory"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:paddingTop = "3dip">
            <TextView
                style="@style/Miui.InformationItemTitleStyle"
                android:text="@string/device_internal_memory"
            />
            <TextView android:id="@+id/internal_memory_available"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:paddingTop = "3dip">
            <TextView
                style="@style/Miui.InformationItemTitleStyle"
            />
            <TextView android:id="@+id/internal_memory_total"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:id= "@+id/sdcard_available_row" android:paddingTop = "3dip">
            <TextView style="@style/Miui.InformationItemTitleStyle"
                android:text="@string/device_sd_memory"
            />
            <TextView android:id="@+id/sdcard_available"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>

        <TableRow android:paddingTop = "3dip">
            <TextView style="@style/Miui.InformationItemTitleStyle"
                android:id="@+id/sdcard_total_title"
            />
            <TextView android:id="@+id/sdcard_total"
                style="@style/Miui.InformationTextStyle"
            />
        </TableRow>
    </TableLayout>
</LinearLayout>

