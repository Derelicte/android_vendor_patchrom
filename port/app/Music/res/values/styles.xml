<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MusicActivityStyle">
        <item name="android:background">@drawable/main_bg</item>
        <item name="android:paddingTop">@dimen/action_bar_height</item>
    </style>
    <style name="TitlePrimaryText">
        <item name="android:textSize">@dimen/title_primary_text</item>
        <item name="android:textColor">@color/title_primary_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text</item>
        <item name="android:textColor">@color/title_secondary_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="HorizontalTitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text</item>
        <item name="android:textColor">@color/horizontal_title_secondary_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PickerListView">
        <item name="android:layout_gravity">top|left|center</item>
        <item name="android:paddingRight">@dimen/spacing_picker_list</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@drawable/item_bg_selector</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@drawable/picker_list_divider</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>
    <style name="ItemPrimaryText">
        <item name="android:textSize">@dimen/item_primary_text</item>
        <item name="android:textColor">@color/item_primary_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ItemSecondaryText">
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@color/item_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="MainItemStyle">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/spacing_picker_item</item>
        <item name="android:paddingRight">@dimen/spacing_picker_item</item>
    </style>
    <style name="PickerItemStyle">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/spacing_picker_item</item>
        <item name="android:paddingRight">@dimen/spacing_picker_item</item>
    </style>
    <style name="BottomBarText">
        <item name="android:textSize">@dimen/bottom_bar_text</item>
        <item name="android:textColor">@color/bottom_bar_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ItemPrimaryIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="SearchHistoryListStyle">
        <item name="android:layout_gravity">top|left|center</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@null</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@drawable/picker_list_divider</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>
    <style name="IndicatorTextStyle">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_30_transparent</item>
        <item name="android:layout_marginTop">-3.0dip</item>
    </style>
    <style name="LyricHighLightStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">-4.0dip</item>
        <item name="android:shadowColor">#ffffae00</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">10.0</item>
    </style>
    <style name="LyricNormalStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#4cffffff</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="EqualizerSeekBarStyle">
        <item name="android:paddingTop">28.0dip</item>
        <item name="android:paddingBottom">28.0dip</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:thumb">@drawable/equalizer_thumb</item>
    </style>
    <style name="ToolIconStyle">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="BatchSelectionCheckBoxStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">32.0dip</item>
        <item name="android:layout_height">32.0dip</item>
        <item name="android:layout_marginRight">-6.669983dip</item>
        <item name="android:button">@drawable/btn_check</item>
    </style>
    <style name="NowplayingItemStyle">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/nowplaying_item_padding</item>
        <item name="android:paddingRight">@dimen/nowplaying_item_padding</item>
    </style>
    <style name="NowplayingPrimaryText">
        <item name="android:textSize">@dimen/item_primary_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/black_50_transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="NowplayingSecondaryText">
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/black_50_transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
    <style name="MarqueeTextStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="TrackDetailText">
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@color/white_50_transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MainBrowserTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MainBrowserActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/title_navigator_selector</item>
    </style>
    <style name="MainBrowserActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/title_bar_bg</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="PickerActivityTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/PickerActivityActionBarStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_cab_done</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/PickerActivityCloseModeStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/title_navigator_selector</item>
    </style>
    <style name="PickerActivityActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/title_bar_bg</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp|showCustom</item>
    </style>
    <style name="PickerActivityCloseModeStyle">
        <item name="android:background">@drawable/btn_cab_done_selector</item>
    </style>
    <style name="SettingsActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SettingsActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
    </style>
    <style name="SettingsActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp|showTitle|showCustom</item>
    </style>
    <style name="ActionButtonOverflowStyle" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow</item>
    </style>
    <style name="MusicPickerTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MusicPickerActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/title_navigator_selector</item>
    </style>
    <style name="MusicPickerActionBarStyle" parent="@miui:style/EditorCustomActionBarTheme">
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
</resources>
