<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/PickerItemStyle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_toLeftOf="@id/icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <TextView android:id="@id/name" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/ItemPrimaryText" />
        <TextView android:id="@id/count" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/ItemSecondaryText" />
    </LinearLayout>
</RelativeLayout>
