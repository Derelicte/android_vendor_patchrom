        <activity android:label="@string/cloud_home_title" android:name="com.miui.milk.ui.CloudRestoreMain" android:launchMode="singleTop" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.CLOUD_RESTORE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:theme="@miui:style/Theme.Light" android:label="@string/auto_backup" android:name="com.miui.milk.ui.AutoBackupPreference" android:launchMode="singleTop" android:configChanges="keyboard|keyboardHidden|orientation" />
