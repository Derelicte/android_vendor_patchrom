    <application android:theme="@style/Theme.Light.Show.Title" android:label="@string/app_name" android:icon="@drawable/icon" android:uiOptions="splitActionBarWhenNarrow">
        <activity android:theme="@android:style/Theme.Holo.Light" android:label="@string/app_name" android:name="com.miui.backup.BackupActivity" android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/local_app_name" android:name="com.miui.backup.ui.BackupSelectActivity" android:launchMode="singleTop" android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:label="@string/local_app_name" android:name="com.miui.backup.ui.RestoreSelectActivity" android:launchMode="singleTop" android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:theme="@android:style/Theme.Holo.Light.NoActionBar" android:label="@string/local_app_name" android:name="com.miui.backup.ui.ProgressPageActivity" android:launchMode="singleTop" android:configChanges="keyboard|keyboardHidden|orientation" />
        <service android:name="com.miui.backup.BackupService" android:exported="true" />
        <service android:name="com.miui.milk.service.CloudBackupService" android:exported="true" />
