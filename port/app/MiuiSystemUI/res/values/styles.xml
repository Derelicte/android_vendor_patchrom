<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.StatusBar.Title" parent="@miui:style/TextAppearance.StatusBar">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="TextAppearance.StatusBar.IntruderAlert" parent="@miui:style/TextAppearance.StatusBar" />
    <style name="TextAppearance.StatusBar.SystemPanel" parent="@miui:style/TextAppearance.StatusBar">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff808080</item>
    </style>
    <style name="TextAppearance.StatusBar.TextButton" parent="@miui:style/TextAppearance.StatusBar">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.StatusBar.Clock" parent="@android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>
    <style name="TextAppearance.StatusBar.Date" parent="@android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_textColor_alternative</item>
    </style>
    <style name="Animation" />
    <style name="Animation.ShirtPocketPanel" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@miui:anim/android_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@miui:anim/android_shrink_fade_out_from_bottom</item>
    </style>
    <style name="Animation.RecentPanel" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@miui:anim/android_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@miui:anim/android_shrink_fade_out_from_bottom</item>
    </style>
    <style name="Animation.StatusBar" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/status_bar_enter</item>
        <item name="android:windowExitAnimation">@anim/status_bar_exit</item>
    </style>
    <style name="Animation.StatusBar.IntruderAlert" parent="@style/Animation.StatusBar">
        <item name="android:windowEnterAnimation">@anim/priority_alert_enter</item>
        <item name="android:windowExitAnimation">@anim/priority_alert_exit</item>
    </style>
    <style name="TextAppearance.StatusBar.PhoneTicker" parent="@miui:style/TextAppearance.StatusBar.Ticker">
        <item name="android:textSize">14.0dip</item>
    </style>
    <style name="StatusBarGridItem">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/toggle_lable_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/status_bar_grid_item_bg</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="StatusBarTab">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/tab_lable_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#d9ffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
