<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/appshare_settings"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/appshare_pref_use_in_wifi">
        <CheckBoxPreference android:title="@string/appshare_pref_auto_update" android:key="pref_key_wifi_auto_update" android:defaultValue="false" android:disableDependentsState="true" />
        <CheckBoxPreference android:title="@string/appshare_pref_remind_update" android:key="pref_key_wifi_remind_update" android:dependency="pref_key_wifi_auto_update" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/appshare_pref_auto_refresh_app_infos" android:key="pref_key_wifi_refresh_app_infos" android:summary="@string/appshare_pref_auto_refresh_app_infos_summary" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/appshare_pref_use_in_no_wifi">
        <CheckBoxPreference android:title="@string/appshare_pref_auto_update" android:key="pref_key_no_wifi_auto_update" android:defaultValue="false" android:disableDependentsState="true" />
        <CheckBoxPreference android:title="@string/appshare_pref_remind_update" android:key="pref_key_no_wifi_remind_update" android:dependency="pref_key_no_wifi_auto_update" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/appshare_pref_auto_refresh_app_infos" android:key="pref_key_no_wifi_refresh_app_infos" android:summary="@string/appshare_pref_auto_refresh_app_infos_summary" android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>
