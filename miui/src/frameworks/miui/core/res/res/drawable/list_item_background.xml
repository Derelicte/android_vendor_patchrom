<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"
        android:drawable="@drawable/list_item_background_disabled" />
    <item android:state_pressed="true"
        android:drawable="@drawable/list_item_background_pressed" />
    <item android:state_selected="true"
        android:drawable="@drawable/list_item_background_selected" />
    <item android:state_active="true"
        android:drawable="@drawable/list_item_background_activated" />
    <item android:state_focused="true"
        android:drawable="@drawable/list_item_background_focused" />
    <item
        android:drawable="@drawable/list_item_background_normal" />
</selector>

