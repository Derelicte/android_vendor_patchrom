<resources>
    <color name="secondary_tab_text_color">#b2000000</color>
    <color name="secondary_tab_text_pressed_color">#ff000000</color>

    <color name="guide_popup_window_textColor">@android:color/white</color>

    <!-- alphabet fast indexer -->
    <color name="alphabet_indexer_overlay_text_color">#ffffff</color>
    <color name="alphabet_indexer_text_color">#4c000000</color>
    <color name="alphabet_indexer_highlight_text_color">#ffff7e00</color>

    <color name="button_text_color">#cc000000</color>
    <color name="button_text_color_disabled">#53000000</color>
    <color name="button_text_shadow">@color/primary_text_color_shadow</color>
    <integer name="button_text_shadow_dy">1</integer>

    <!-- copy this value from android:color/bright_foreground_holo_dark -->
    <color name="primary_text_holo_dark">#fff9f9f9</color>
    <!-- copy this value from android:color/dim_foreground_holo_dark -->
    <color name="secondary_text_holo_dark">#bebebe</color>
    <!-- copy this value from android:color/bright_foreground_holo_light -->
    <color name="primary_text_holo_light">#cc000000</color>
    <!-- copy this value form android:color/dim_foreground_holo_light -->
    <color name="secondary_text_holo_light">#66000000</color>

    <color name="primary_text_color_inverse">@android:color/white</color>
    <color name="secondary_text_color_inverse">@android:color/white</color>
    <color name="primary_text_color_shadow">#80ffffff</color>
    <color name="secondary_text_color_shadow">#80ffffff</color>

    <!-- Colors to indicate information's types -->
    <!-- Something unexpected which causes program fail or in the wrong state -->
    <color name="information_error">@android:color/holo_red_dark</color>
    <!-- Something unexpected but program could continue or need user to confirm -->
    <color name="information_warning">#ffff7e00</color>
    <!-- Something in running like downloading, query/delete/update/save which takes a long time -->
    <color name="information_in_progress">@android:color/holo_purple</color>
    <!-- Something indicates multi states for one thing, like mitalk message state -->
    <color name="information_done">@android:color/holo_green_light</color>
    <!-- Descriptions like title without much attentions -->
    <color name="information_normal">@android:color/holo_blue_light</color>
</resources>
