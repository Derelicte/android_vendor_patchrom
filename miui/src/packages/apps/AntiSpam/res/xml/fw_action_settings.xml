<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="pref_root"
        android:title="@string/fw_action_settings">

    <PreferenceCategory
        android:title="@string/act_call"
        >

        <miui.preference.RadioButtonPreference
            android:key="call_action_1"
            android:title="@string/act_hangup_call"
            android:summary="@string/act_hangup_call_summary"
            android:persistent="false"
            />

        <miui.preference.RadioButtonPreference
            android:key="call_action_2"
            android:title="@string/act_mute_call"
            android:summary="@string/act_mute_call_summary"
            android:persistent="false"
            />

        <miui.preference.RadioButtonPreference
            android:key="call_action_3"
            android:title="@string/act_ignore_call"
            android:persistent="false"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/act_ms"
        >

        <miui.preference.RadioButtonPreference
            android:key="ms_action_3"
            android:title="@string/act_del_ms"
            android:summary="@string/act_del_ms_summary"
            android:persistent="false"
            />

        <miui.preference.RadioButtonPreference
            android:key="ms_action_2"
            android:title="@string/act_mute_ms"
            android:summary="@string/act_mute_ms_summary"
            android:persistent="false"
            />

        <miui.preference.RadioButtonPreference
            android:key="ms_action_1"
            android:title="@string/act_ignore_ms"
            android:persistent="false"
            />

    </PreferenceCategory>
</PreferenceScreen>
