<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_phone_description"
        android:textColor="@miui:color/android_listseparator_text_holo_light"
        android:background="@miui:drawable/android_list_section_divider_holo_light"
        android:textSize="16sp"
        android:paddingTop="12dip"
        android:paddingBottom="6dip"
        android:paddingLeft="10dip" />
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textAppearance="@android:style/TextAppearance.Small" />
    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/user_phone_button_verify" />
</LinearLayout>
