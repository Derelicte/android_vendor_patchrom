<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip">
    <!-- account create by mobile -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadingEdge="none">
        <LinearLayout
            android:id="@+id/account_by_mobile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/mobile"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dip"/>
            <EditText
                android:id="@+id/mobile_edit_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/mobile_hint_text"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:inputType="phone" />
            <Button
                android:id="@+id/get_vercode_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:text="@string/get_vercode"/>
            <TextView
                android:text="@string/vercode"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <EditText
                android:id="@+id/vercode_edit_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:hint="@string/vercode_hint_text"
                android:inputType="textEmailAddress" />
           <TextView
                android:id="@+id/user_agreement"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           <Button
                android:id="@+id/next_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:layout_gravity="right"
                android:text="@string/next"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dip">
                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_height="20dip"
                    android:layout_width="20dip"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/login_status_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" />
            <include layout="@layout/passport_web"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
