<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Translucent.NoTitleBar.Dark"
           parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Activity 主题 -->
    <style name="Theme.Holo.Light"
           parent="@miui:style/Theme.Light">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
        <item name="android:actionOverflowButtonStyle">@miui:style/Widget.Holo.Light.ActionButton.Overflow</item>
    </style>

    <style name="Theme.Holo.Light.Main"
           parent="@style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="Theme.Holo.Light.NoActionBar"
           parent="@style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.NoActionBar</item>
    </style>

    <style name="Theme.Holo.Light.Dialog"
           parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
    </style>

    <style name="Theme.Holo.Light.Dialog.NoActionBar"
           parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
    </style>

    <style name="ActionBarStyle" parent="@miui:style/Widget.Holo.Light.ActionBar.Solid.HomeUp">
        <item name="android:displayOptions">homeAsUp|useLogo</item>
    </style>

    <style name="ActionBarStyle.NoActionBar">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ListItem">
        <item name="android:paddingTop">@dimen/list_item_padding_outer</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_outer</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_outer</item>
        <item name="android:paddingRight">@dimen/list_item_padding_outer</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/normal_list_item_bg</item>
    </style>

    <style name="ListItem.Narrow">
        <item name="android:paddingTop">@dimen/list_item_padding_outer</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_outer</item>
        <item name="android:paddingLeft">@null</item>
        <item name="android:paddingRight">@null</item>
        <item name="android:background">@miui:drawable/list_medium_middle_item_background</item>
    </style>

    <style name="ListItemContent">
        <item name="android:paddingLeft">@dimen/list_item_padding_inner</item>
        <item name="android:paddingRight">@dimen/list_item_padding_inner</item>
    </style>

    <style name="ExpandableListView" parent="@android:style/Widget.Holo.Light.ExpandableListView">
        <item name="android:groupIndicator">@drawable/expander_group</item>
        <item name="android:indicatorLeft">16dip</item>
        <item name="android:indicatorRight">?android:attr/expandableListPreferredItemIndicatorRight</item>
        <item name="android:childDivider">?android:attr/listDivider</item>
    </style>

    <style name="Widget.Holo.Light.Button"
           parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:shadowColor">@color/text_color_primary_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.Primary"><!-- 需要反色 -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_font_size_huge</item>
    </style>

    <style name="TextAppearance.Secondary"><!-- 需要反色 -->
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <!-- 会话列表list item样式 -->
    <style name="TextAppearance.ConversationListItem">
        <item name="android:shadowColor">@color/conversation_list_item_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.ConversationListItem.Primary"><!-- 需要反色 -->
        <item name="android:textColor">@color/conversation_primary_text</item>
        <item name="android:textSize">@dimen/conversation_list_item_primary_font_size</item>
    </style>

    <style name="TextAppearance.ConversationListItem.Primary.Unread"><!-- 需要反色 -->
        <item name="android:textColor">@color/conversation_unread_text</item>
        <item name="android:textSize">@dimen/conversation_list_item_primary_font_size</item>
    </style>

    <style name="TextAppearance.ConversationListItem.Secondary"><!-- 需要反色 -->
        <item name="android:textColor">@color/conversation_secondary_text</item>
        <item name="android:textSize">@dimen/conversation_list_item_secondary_font_size</item>
    </style>

    <!-- 单发会话页头 -->
    <style name="TextAppearance.ConversationTitle">
        <item name="android:shadowColor">@color/conversation_title_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.ConversationTitle.Primary"><!-- 不需要反色 -->
        <item name="android:textColor">@color/conversation_title_primary_text_color</item>
        <item name="android:textSize">@dimen/conversation_title_primary_font_size</item>
    </style>

    <style name="TextAppearance.ConversationTitle.Secondary"><!-- 不需要反色 -->
        <item name="android:textColor">@color/conversation_title_secondary_text_color</item>
        <item name="android:textSize">@dimen/conversation_title_secondary_font_size</item>
    </style>

    <!-- 会话item -->
    <style name="TextAppearance.MessageTitle">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.MessageTitle.List"><!-- 需要反色 -->
        <item name="android:textColor">@color/message_list_title_text</item>
        <item name="android:textSize">@dimen/message_list_title_font_size</item>
        <item name="android:shadowColor">@color/message_list_title_text_shadow_color</item>
    </style>

    <style name="TextAppearance.MessageTitle.Bubble"><!-- 不需要反色 -->
        <item name="android:textColor">@color/message_bubble_title_text_color</item>
        <item name="android:textSize">@dimen/message_bubble_title_font_size</item>
        <item name="android:shadowColor">@color/message_bubble_title_text_shadow_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MessageDeliver">
        <item name="android:textSize">@dimen/message_deliver_font_size</item>
        <item name="android:shadowColor">@color/message_deliver_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.MessageDeliver.List"><!-- 需要反色 -->
        <item name="android:textColor">@color/message_deliver_text</item>
    </style>

    <style name="TextAppearance.MessageDeliver.Bubble"><!-- 不需要反色 -->
        <item name="android:textColor">@color/message_deliver_text_color</item>
    </style>

    <style name="TextAppearance.MessageBody">
        <item name="android:textSize">@dimen/message_body_font_size</item>
        <item name="android:textColorLink">@color/message_body_link_text</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.MessageBody.Bubble"><!-- 需要反色 -->
        <item name="android:textColor">@color/message_bubble_body_text</item>
        <item name="android:shadowColor">@color/message_bubble_body_text_shadow_color</item>
    </style>

    <style name="TextAppearance.MessageBody.List"><!-- 需要反色 -->
        <item name="android:textColor">@color/message_list_body_text</item>
        <item name="android:shadowColor">@color/message_list_body_text_shadow_color</item>
    </style>

    <style name="TextAppearance.MessageBody.Mms"><!-- 不需要反色 -->
        <item name="android:textColor">@color/message_body_mms_text_color</item>
        <item name="android:shadowColor">@color/message_body_mms_text_shadow_color</item>
    </style>

    <style name="TextAppearance.MessageBody.Secondary"><!-- 需要反色 -->
        <item name="android:textColor">@color/message_body_secondary_text</item>
        <item name="android:textSize">@dimen/message_body_secondary_font_size</item>
        <item name="android:shadowColor">@color/message_body_secondary_text_shadow_color</item>
    </style>

    <style name="TextAppearance.RecipientEditor" parent="android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/message_body_font_size</item>
    </style>

    <style name="TextAppearance.RecipientEditor.Primary" >
        <item name="android:textColor">@color/recipient_edit_primary_text_color</item>
    </style>

    <style name="TextAppearance.RecipientEditor.Secondary">
        <item name="android:textColor">@color/recipient_edit_secondary_text_color</item>
    </style>

    <style name="TextAppearance.MmsEditor" parent="android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.MmsEditor.NicknameSpan">
        <item name="android:textColor">@color/nickname_placeholder_fg</item>
    </style>

    <style name="TextAppearance.FlatshowPageNo">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/flatshow_pageno_font_size</item>
        <item name="android:textColor">@color/flatshow_pageno_text_color</item>
        <item name="android:shadowColor">@color/flatshow_pageno_text_shadow_color</item>
    </style>

    <style name="MessageButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>

    <style name="MessageButton.Download">
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingRight">17dip</item>
        <item name="android:paddingBottom">7dip</item>
    </style>

    <style name="MessageButton.Alert">
        <item name="android:background">@drawable/alert_btn</item>
        <item name="android:textColor">@color/message_button_alert_text_color</item>
    </style>

    <style name="MessageButton.Common">
        <item name="android:background">@drawable/common_btn</item>
    </style>
</resources>
