<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ListItem">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/name"
            android:textAppearance="@style/TextAppearance.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />
        <TextView
            android:id="@+id/number"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>
    <view
        class="com.android.mms.ui.SearchFragment$TextViewSnippet"
        android:id="@+id/subtitle"
        android:textAppearance="@style/TextAppearance.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true" />
</LinearLayout>
