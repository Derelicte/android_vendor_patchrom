<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/attachment_pic"
        android:layout_width="@dimen/mms_attachment_pic_width"
        android:layout_height="@dimen/mms_attachment_pic_height"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/message_attachment_pic_bubble_out" />
    <ImageView
        android:id="@+id/attachment_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/message_attachment_card_bubble_out" />
    <ImageView
        android:id="@+id/attachment_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/message_attachment_audio_bubble_out" />
    <ImageView
        android:id="@+id/attachment_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/message_attachment_video_bubble_out" />
    <ImageView
        android:id="@+id/attachment_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/message_attachment_pin_bubble_out" />
    <ImageView
        android:id="@+id/attachment_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/message_attachment_default_bubble_out" />
</merge>