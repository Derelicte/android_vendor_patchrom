<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_track_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|left"
    android:ignoreGravity="@+id/adjust_button"
    style="@style/PickerItemStyle">
    <ImageView
        android:id="@+id/adjust_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/list_edit_icon" />
    <include layout="@layout/track_list_item_common" />

</RelativeLayout>
