<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PickerItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/album_item_bg_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/album"
        style="@style/ItemPrimaryIcon"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="6.67dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/ItemPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details"
            style="@style/ItemSecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="-5dip"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/play_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="center" />

    <CheckBox android:id="@+id/batch_selection_check"
        style="@style/BatchSelectionCheckBoxStyle"
        android:visibility="gone" />

</LinearLayout>