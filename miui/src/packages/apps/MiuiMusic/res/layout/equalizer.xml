<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/equalizer_main_bg"
    >
    <TextView
        style="@style/TitlePrimaryText"
        android:id="@+id/equalizer_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:text="@string/equalizer"
        android:background="@drawable/equalizer_title_bg"
        />

    <RelativeLayout
        android:id="@+id/equalizer_operation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/equalizer_header"
        android:background="@drawable/equalizer_top_bg"
        >
        <TextView
            android:id="@+id/effect_type"
            android:layout_width="210dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="18dip"
            android:textColor="@android:color/white"
            android:background="@drawable/equalizer_current_selector"
            />
        <TextView
            android:id="@+id/commit_to_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/effect_type"
            android:text="@string/save"
            android:gravity="center"
            android:textSize="18dip"
            android:textColor="@color/equalizer_save_text"
            android:background="@drawable/equalizer_save_selector"
            />
    </RelativeLayout>

    <!-- 均衡器设置区域 -->
    <LinearLayout
        android:id="@+id/equalizer_adjust"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/equalizer_adjust_bg"
        android:paddingTop="10dip"
        >
        <com.miui.player.ui.view.VerticalSeekBar
            style="@style/EqualizerSeekBarStyle"
            android:id="@+id/progress_volume"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/equalizer_seek_bar_height"
            android:layout_marginLeft="@dimen/volume_seek_bar_margin"
            />
        <com.miui.player.ui.view.VerticalSeekBar
            style="@style/EqualizerSeekBarStyle"
            android:id="@+id/progress_eq1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/equalizer_seek_bar_height"
            android:layout_marginLeft="@dimen/first_equalizer_seek_bar_margin"
            />
        <com.miui.player.ui.view.VerticalSeekBar
            style="@style/EqualizerSeekBarStyle"
            android:id="@+id/progress_eq2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/equalizer_seek_bar_height"
            android:layout_marginLeft="@dimen/equalizer_seek_bar_margin"
            />
        <com.miui.player.ui.view.VerticalSeekBar
            style="@style/EqualizerSeekBarStyle"
            android:id="@+id/progress_eq3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/equalizer_seek_bar_height"
            android:layout_marginLeft="@dimen/equalizer_seek_bar_margin"
            />
        <com.miui.player.ui.view.VerticalSeekBar
            style="@style/EqualizerSeekBarStyle"
            android:id="@+id/progress_eq4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/equalizer_seek_bar_height"
            android:layout_marginLeft="@dimen/equalizer_seek_bar_margin"
            />
         <com.miui.player.ui.view.VerticalSeekBar
            style="@style/EqualizerSeekBarStyle"
            android:id="@+id/progress_eq5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/equalizer_seek_bar_height"
            android:layout_marginLeft="@dimen/equalizer_seek_bar_margin"
            />
    </LinearLayout>

    <!-- 均衡器设置曲线显示 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/equalizer_operation"
        android:background="@drawable/equalizer_surface_bg"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="3dip"
        >
        <com.miui.player.ui.view.EqualizerView
            android:id="@+id/surface"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            xmlns:miui="http://schemas.android.com/apk/res/com.miui.player"
            miui:curve_color="@color/equalizer_curve"
            miui:curve_shadow_color="@color/equalizer_curve_shadow"
            miui:curve_shadow_radius="5"
        />
    </LinearLayout>

</RelativeLayout>
