<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView android:id="@+id/selection_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:background="@drawable/drapdown_menu_selector"
        android:textSize="@dimen/multi_choice_text"
        android:textColor="@color/multi_choice_text"
        android:shadowColor="@color/multi_choice_text_shadow"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="1"/>
</LinearLayout>