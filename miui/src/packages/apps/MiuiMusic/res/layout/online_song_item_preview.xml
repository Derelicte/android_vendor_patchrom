<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/online_song_item_preview"
    android:layout_height="36dip"
    android:layout_width="fill_parent"
    android:paddingTop="5dip"
    >

    <TextView android:id="@+id/song_number"
        android:layout_height="15.3dip"
        android:layout_width="14.7dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8.5dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="4dip"
        android:textSize="@dimen/preview_item_num_text"
        android:textStyle="bold"
        android:textColor="@color/preview_item_number_text"
        android:includeFontPadding="false"
        android:background="@drawable/category_num_bg"
    />

    <TextView
        android:id="@+id/song_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/song_number"
        android:textSize="@dimen/preview_item_title_text"
        android:textColor="@color/preview_item_title_text"
        android:maxWidth="100dip"
        android:singleLine="true"
        android:gravity="bottom"
    />

    <TextView
        android:id="@+id/artist_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/song_name"
        android:layout_toRightOf="@id/song_number"
        android:textSize="@dimen/preview_item_descript_text"
        android:maxWidth="100dip"
        android:textColor="@color/preview_item_descript_text"
        android:gravity="top"
        android:layout_marginTop="-2dip"/>

</RelativeLayout>
