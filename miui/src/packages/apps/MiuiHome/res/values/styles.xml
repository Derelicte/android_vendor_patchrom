<resources>
    <style name="Theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="FolderSettingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RightRadioButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/list_item_primary</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">60dip</item>
    </style>

    <style name="WorkspaceIconTitle">
        <item name="android:textSize">@dimen/workspace_icon_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowColor">@color/icon_title_text_shadow</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:textColor">@color/icon_title_text</item>
    </style>

    <style name="WorkspaceIconTitle.folder">
        <item name="android:textColor">@color/folder_icon_title_text</item>
        <item name="android:shadowColor">@color/folder_icon_title_text_shadow</item>
    </style>

    <style name="WorkspaceIconTitle.notification">
        <item name="android:textSize">@dimen/workspace_icon_text_notification</item>
    </style>

    <style name="SearchButton" parent="@android:style/Widget.Button.Small">
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">9dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="HotseatButton">
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
    </style>
   <style name="MarqueeTextView">
           <item name="android:singleLine">true</item>
           <item name="android:focusable">true</item>
           <item name="android:focusableInTouchMode">true</item>
           <item name="android:scrollHorizontally">true</item>
           <item name="android:ellipsize">marquee</item>
           <item name="android:marqueeRepeatLimit">marquee_forever</item>
   </style>

    <style name="GadgetPlayerLyricCurrentLineShadowStyle">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowColor">@color/gadget_player_lyric_shadow_color</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="MultiSelectActionButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dip</item>
    </style>
</resources>
