<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_pop_bg"
>
    <TextView android:id="@+id/cut"
        style="@style/SingleViewEditActionButton"
        android:text="@string/cut"
        android:drawableTop="@drawable/cut_selector"
    />
    <TextView android:id="@+id/turn_left"
        style="@style/SingleViewEditActionButton"
        android:text="@string/turn_left"
        android:drawableTop="@drawable/lturn_selector"
    />
    <TextView android:id="@+id/turn_right"
        style="@style/SingleViewEditActionButton"
        android:text="@string/turn_right"
        android:drawableTop="@drawable/rturn_selector"
    />
    <TextView android:id="@+id/edit"
        style="@style/SingleViewEditActionButton"
        android:text="@string/edit"
        android:drawableTop="@drawable/edit_selector"
    />
    <TextView android:id="@+id/more"
        style="@style/SingleViewEditActionButton"
        android:text="@string/more"
        android:drawableTop="@drawable/more_selector"
        android:visibility="gone"
    />
</LinearLayout>
