<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/progress_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/progress_title_bg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/result_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/result_succeed"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/progress_info"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView style="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/progress_summary"
            android:textColor="@color/half_transparent_white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/backup_hint" />
       <View
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1" />
       <Button
           android:id="@+id/button_cancel"
           android:text="@string/button_cancel"
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:gravity="center"
           android:layout_gravity="center_vertical|bottom"/>
    </LinearLayout>
    <ListView
        android:id="@+id/progress_list"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
