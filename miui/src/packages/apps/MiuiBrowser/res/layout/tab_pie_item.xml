<?xml version="1.0" encoding="utf-8"?>

<!-- MIUI tab pie item view -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pie_show_tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@drawable/pie_item_bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/pie_show_tabs"/>
    <TextView android:id="@+id/tab_count"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|right"
        android:gravity="center"
        android:textColor="@miui:color/information_error"
        android:background="@drawable/pie_tab_count"
        android:typeface="sans"/>
</FrameLayout>
