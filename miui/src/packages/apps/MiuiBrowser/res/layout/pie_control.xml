<?xml version="1.0" encoding="utf-8"?>

<!-- MIUI pie view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:visibility="invisible">
    <com.android.browser.view.ImagePieItemView style="@style/PieItem"
        android:id="@+id/pie_new_tab"
        android:src="@drawable/pie_new_tab"/>
    <com.android.browser.view.ImagePieItemView style="@style/PieItem"
        android:id="@+id/pie_show_bookmarks"
        android:src="@drawable/pie_show_bookmarks"/>
    <com.android.browser.view.ImagePieItemView style="@style/PieItem"
        android:id="@+id/pie_show_titlebar"
        android:src="@drawable/pie_show_titlebar"/>
    <include layout="@layout/tab_pie_item"/>
    <com.android.browser.view.ImagePieItemView style="@style/PieItem"
        android:id="@+id/pie_show_menu"
        android:src="@drawable/pie_show_menu"/>
</LinearLayout>

