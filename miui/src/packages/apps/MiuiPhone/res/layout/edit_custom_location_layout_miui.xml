<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fadingEdge="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center_vertical"
                android:text="@string/edit_custom_location_title_miui" />
            <EditText
                android:id="@+id/custom_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:phoneNumber="true"
                android:hint="@string/custom_location_number_hint_miui"
                style="@style/Miui.TextAppearance.Primary" />
            <EditText
                android:id="@+id/custom_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/custom_location_location_hint_miui"
                style="@style/Miui.TextAppearance.Primary" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center_vertical"
                android:text="@string/number_type_miui" />
            <RadioGroup
                android:id="@+id/type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/type_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_type_tel_miui"
                    style="@style/Miui.TextAppearance.RightRadioButton" />

                <RadioButton
                    android:id="@+id/type_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_type_mob_miui"
                    style="@style/Miui.TextAppearance.RightRadioButton" />

                <RadioButton
                    android:id="@+id/type_jituan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_type_jituan_miui"
                    style="@style/Miui.TextAppearance.RightRadioButton" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/incall_button_red_miui"
                android:text="@string/remove_miui"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok"
            android:layout_marginRight="5dip" />
        <Button
            android:id="@+id/btn_discard"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" />
    </LinearLayout>
</LinearLayout>
