<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_weather_main_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
    <LinearLayout
        android:id="@+id/listitem_weather_main_layout_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
    >
        <ImageView
            android:id="@+id/listitem_weather_main_img"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="10dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/i_drog"
            android:background="#00000000"
        />
        <TextView
            android:id="@+id/listitem_weather_main_key"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textColor="#99CCCCCC"
            android:singleLine="true"
        />
        <TextView
            android:id="@+id/listitem_weather_main_value"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
        />
        <ImageView
            android:id="@+id/listitem_weather_main_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:src="@drawable/btn_arrow_down"
            android:background="#00000000"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listitem_weather_main_layout_down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
    >
        <TextView
            android:id="@+id/listitem_weather_main_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dip"
            android:layout_marginRight="5dip"
            android:textSize="14sp"
            android:textColor="#99CCCCCC"
        />
    </LinearLayout>
</LinearLayout>