<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="100dip"
    android:clickable="true"
    android:focusable="true"
>
    <ImageView
        android:id="@+id/widget_1x4_color_bg"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:clickable="true"
        android:focusable="true"
        android:background="#00000000"
    />
    <TextView
        android:id="@+id/widget_1x4_color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_gravity="left|top"
        android:textSize="60sp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:shadowColor="#FF000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
    />
    <TextView
        android:id="@+id/widget_1x4_color_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_gravity="left|bottom"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:shadowColor="#FF000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="1.0"
    />
    <TextView
        android:id="@+id/widget_1x4_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:layout_gravity="right|top"
        android:textSize="60sp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:shadowColor="#FF000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
    />
    <TextView
        android:id="@+id/widget_1x4_color_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:layout_gravity="right|bottom"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:text="@string/widget_loading"
        android:shadowColor="#FF000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="1.0"
    />

    <ImageView
        android:id="@+id/widget_1x4_left_color_1"
        android:layout_width="150dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
    />
    <ImageView
        android:id="@+id/widget_1x4_left_color_2"
        android:layout_width="150dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="150dip"
    />
</FrameLayout>
