<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/window_report_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#663F3F3F"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="240dip"
        android:layout_height="240dip"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/window_report_layout_up"
            android:layout_width="fill_parent"
            android:layout_height="47dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
        >
            <TextView
                android:id="@+id/window_report_head"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:textColor="#FF000000"
                android:singleLine="true"
            />
            <ImageView
                android:id="@+id/window_report_layout_bar_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/i_close"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/window_report_layout_main"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:layout_weight="1"
        >
            <TextView
                android:id="@+id/window_report_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="20dip"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#FF000000"
                android:text="@string/tip_weather_info_error"
            />
            <TextView
                android:id="@+id/window_report_content"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#FF000000"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/window_report_layout_bar"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:gravity="center"
        >
            <Button
                android:id="@+id/window_report_layout_bar_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="4dip"
                android:background="@drawable/popup_item"
                android:text="@string/report_send"
                android:textSize="16sp"
                android:textColor="#FF424242"
            />
            <Button
                android:id="@+id/window_report_layout_bar_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dip"
                android:background="@drawable/popup_item"
                android:text="@string/report_exit"
                android:textSize="16sp"
                android:textColor="#FF424242"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>