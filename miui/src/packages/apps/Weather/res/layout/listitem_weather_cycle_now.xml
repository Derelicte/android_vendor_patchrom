<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
>
    <TextView
        android:id="@+id/listitem_weather_cycle_now_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="160dip"
        android:textSize="24sp"
        android:textColor="#FFFFFFFF"
    />
    <TextView
        android:id="@+id/listitem_weather_cycle_now_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dip"
        android:textSize="32sp"
        android:textColor="#FFFFFFFF"
    />
    <TextView
        android:id="@+id/listitem_weather_cycle_now_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dip"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"
    />
    <TextView
        android:id="@+id/listitem_weather_cycle_now_txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"
    />
    <TextView
        android:id="@+id/listitem_weather_cycle_now_txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textSize="14sp"
        android:textColor="#FFFFFFFF"
    />
</LinearLayout>