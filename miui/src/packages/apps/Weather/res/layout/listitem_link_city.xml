<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:orientation="vertical"
>
    <ImageView
        android:id="@+id/listitem_link_city_hide_up"
        android:layout_width="fill_parent"
        android:layout_height="53dip"
    />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_line_bg_80_bottom"
    >
        <ImageButton
            android:id="@+id/listitem_link_city_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#00000000"
            android:src="@drawable/i_gps"
        />
        <TextView
            android:id="@+id/listitem_link_city_key"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
        />
        <ImageButton
            android:id="@+id/listitem_link_city_drog"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#00000000"
            android:src="@drawable/i_drog"
        />
        <ImageButton
            android:id="@+id/listitem_link_city_del"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#00000000"
            android:src="@drawable/i_delete"
        />
        <ImageView
            android:id="@+id/listitem_link_city_gps"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#00000000"
            android:visibility="gone"
        />
    </LinearLayout>
</LinearLayout>
