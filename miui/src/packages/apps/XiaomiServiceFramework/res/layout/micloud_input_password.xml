<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/notice_text_padding_h"
                android:paddingRight="@dimen/notice_text_padding_h"
                android:paddingTop="@dimen/content_top_margin"
        >
    <include
            android:id="@+id/bottom_panel"
            layout="@layout/micloud_steps_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/button_top_margin"
            android:layout_marginBottom="@dimen/button_top_margin"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bottom_panel"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_adjust_margin_h"
                android:text="@string/micloud_input_password_prompt"
                style="@style/NoticeTextStyle"
                />
        <EditText
                android:id="@+id/ev_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_content_margin_v"
                android:hint="@string/password_hint"
                android:password="true"
                android:singleLine="true"
                />
        <EditText
                android:id="@+id/ev_password_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_content_margin_v"
                android:hint="@string/micloud_password_confirm_hint"
                android:password="true"
                android:singleLine="true"
                android:imeOptions="actionNext"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_content_margin_v"
                android:layout_marginLeft="@dimen/text_adjust_margin_h"
                android:layout_marginRight="@dimen/text_adjust_margin_h"
                android:text="@string/micloud_password_req_notice"
                style="@style/NoticeSubTextStyleGray"
                />
    </LinearLayout>
</RelativeLayout>