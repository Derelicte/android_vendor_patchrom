<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/notice_text_padding_h"
                android:paddingRight="@dimen/notice_text_padding_h"
                android:paddingTop="@dimen/content_top_margin"
        >
    <Button
            android:id="@+id/btn_finish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/completed"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_top_margin"
            android:layout_marginBottom="@dimen/button_top_margin"
            android:layout_alignParentBottom="true"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/btn_finish"
            android:gravity="center"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/micloud_active_email_sent_1"
                style="@style/NoticeTextStyle"
                />
        <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/lines_margin_v"
                style="@style/NoticeTextStyle"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/micloud_active_email_sent_2"
                android:layout_marginTop="@dimen/lines_margin_v"
                style="@style/NoticeTextStyle"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_top_margin"
                android:text="@string/micloud_click_email"
                android:layout_gravity="center_horizontal"
                style="@style/NoticeTextStyle"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lines_margin_v"
                android:text="@string/micloud_account"
                android:layout_gravity="center_horizontal"
                style="@style/NoticeTextStyle"
                />
    </LinearLayout>
</RelativeLayout>