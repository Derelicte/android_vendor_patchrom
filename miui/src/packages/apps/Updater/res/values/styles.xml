<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="TextAppearance"
        parent="android:TextAppearance">
        <item
            name="android:textColor">@android:color/black</item>
    </style>
    <style
        name="TextAppearance.Content">
        <item
            name="android:textSize">18sp</item>
        <item
            name="android:textColor">#666666</item>
    </style>
    <style
        name="TextAppearance.Medium">
        <item
            name="android:textSize">18sp</item>
    </style>
    <style
        name="TextAppearance.Small">
        <item
            name="android:textSize">14sp</item>
    </style>
    <style
        name="TextAppearance.Button">
        <item
            name="android:textSize">16sp</item>
        <item
            name="android:textColor">@color/deepgrey</item>
    </style>

    <style name="MainActivityTheme" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/MainActivityActionBarStyle</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="MainActivityActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:height">0dip</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
</resources>
